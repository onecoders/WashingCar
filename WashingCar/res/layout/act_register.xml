<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <my.project.washingcar.view.HeaderView
        android:id="@+id/header_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_default_height"
        app:title_name="@string/header_title_register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="50dip"
        android:background="@drawable/login_box1_bj"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dip" >

        <EditText
            android:id="@+id/register_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:drawableLeft="@drawable/sel_login_icon_user"
            android:drawablePadding="5dip"
            android:hint="用户名"
            android:textColor="@drawable/login_edit_text"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/login_line" />

        <EditText
            android:id="@+id/register_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:drawableLeft="@drawable/sel_login_icon_phone"
            android:drawablePadding="5dip"
            android:hint="手机号码"
            android:inputType="phone"
            android:textColor="@drawable/login_edit_text"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/register_validate_code"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:background="@drawable/login_box2_bj"
            android:drawableLeft="@drawable/sel_login_icon_write"
            android:drawablePadding="5dip"
            android:hint="验证码"
            android:inputType="number"
            android:paddingLeft="20dip"
            android:textColor="@drawable/login_edit_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/register_btn_get_code"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1.0"
            android:background="@drawable/sel_login_button_orange"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击提交，即表示您已阅读"
            android:textColor="#838383"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/register_clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:text="服务条款"
            android:textColor="#35a4f4"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@drawable/sel_login_button_blue"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>