<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@drawable/sel_detail_card_up_bj"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/contentDescription"
            android:scaleType="fitXY"
            android:src="@drawable/cswd_image" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sel_detail_card_mid_bj"
        android:orientation="vertical"
        android:padding="5dip" >

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[世茂香槟湖]洗车"
            android:textColor="#6b6b6b"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sel_detail_card_down_bj"
        android:padding="5dip" >

        <TextView
            android:id="@+id/goods_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="12.5"
            android:textColor="#35a4f4"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rmb_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goods_current_price"
            android:text="元" />

        <TextView
            android:id="@+id/goods_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="20元"
            android:textColor="#b6b6b6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goods_kilometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="km"
            android:textColor="#b6b6b6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goods_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/goods_kilometer"
            android:text="3.0"
            android:textColor="#b6b6b6"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>