<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <my.project.washingcar.view.HeaderView
        android:id="@+id/header_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_default_height" />

    <EditText
        android:id="@+id/login_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="50dip"
        android:background="@drawable/login_box2_bj"
        android:drawableLeft="@drawable/sel_login_icon_phone"
        android:drawablePadding="5dip"
        android:hint="手机号码"
        android:inputType="phone"
        android:paddingLeft="20dip"
        android:textColor="@drawable/login_edit_text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/login_validate_code"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:background="@drawable/login_box2_bj"
            android:drawableLeft="@drawable/sel_login_icon_write"
            android:drawablePadding="5dip"
            android:hint="验证码"
            android:inputType="number"
            android:paddingLeft="20dip"
            android:textColor="@drawable/login_edit_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/login_btn_get_code"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1.0"
            android:background="@drawable/sel_login_button_orange"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击提交，即表示您已阅读"
            android:textColor="#838383"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/login_clause"
            android:layout_marginLeft="2dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务条款"
            android:textColor="#35a4f4"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:orientation="vertical" >

        <Button
            android:id="@+id/login_btn_tologin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_login_button_blue"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/login_btn_toregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/sel_login_button_blue"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>